@model Models.Lamp

@{
    ViewBag.Title = "Edit";
}

@section PageScripts
{
    <script src="Scripts/BaseEntityPages.js"></script>
}

<h2>Edit Lamp</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @*The common property defined in Base class*@
    <div class="form-group">
        @Html.LabelFor(model => model.Label, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })
        </div>
    </div>

    @*The  property of Lamp class*@
    <div class="form-group">
        @Html.LabelFor(model => model.LampCode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LampCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LampCode, "", new { @class = "text-danger" })
        </div>
    </div>

    @*Let's use our partial view*@
    @Html.Partial("~/Views/Shared/_ParametersView.cshtml", Model)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

